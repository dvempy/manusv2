---
import Layout from '../layouts/Layout.astro';
import FormHeader from './FormHeader.astro';
import FormProgress from './FormProgress.astro';

interface Props {
  currentStep: string;
  title: string;
  pageTitle?: string;
  pageDescription?: string;
}

const {
  currentStep,
  title,
  pageTitle = 'Personal Loan Application | ApprovedOffers',
  pageDescription = 'Apply for a personal loan with ApprovedOffers. Compare rates from multiple lenders with no impact on your credit score.',
} = Astro.props;
---

<Layout title={pageTitle} description={pageDescription}>
  <FormHeader />
  <main>
    <div class="container">
      <div class="form-wrapper" role="form" aria-labelledby="form-title">
        <FormProgress currentStep={currentStep} />

        <div class="form-section">
          <h1 id="form-title">{title}</h1>
          <slot />
        </div>
      </div>
    </div>
  </main>
</Layout>

<style>
  .container {
    max-width: 600px;
    margin: 0 auto;
    padding: 2rem var(--container-padding);
  }

  .form-wrapper {
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid var(--color-border);
    border-radius: 1.25rem;
    padding: 2rem;
  }

  .form-section {
    margin-bottom: 2rem;
  }

  h1 {
    font-size: 1.75rem;
    font-weight: 600;
    color: var(--color-text);
    margin-bottom: 2rem;
    line-height: 1.2;
  }

  @media (max-width: 768px) {
    .form-wrapper {
      padding: 1.5rem;
    }

    h1 {
      font-size: 1.5rem;
    }
  }
</style>
