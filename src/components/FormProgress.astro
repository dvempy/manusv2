---
import { getStepInfo } from '../lib/form-config';

interface Props {
  currentStep: string;
}

const { currentStep } = Astro.props;
const { currentStep: stepNumber, totalSteps, progress } = getStepInfo(currentStep);
---

<div class="progress">
  <div class="progress-text">Step {stepNumber} of {totalSteps}</div>
  <div class="progress-bar">
    <div class="progress-fill" style={`width: ${progress}%`}></div>
  </div>
</div>

<style>
  .progress {
    margin-bottom: 2rem;
  }

  .progress-text {
    color: var(--color-muted);
    font-size: 0.875rem;
    margin-bottom: 0.5rem;
  }

  .progress-bar {
    height: 4px;
    background: rgba(255, 255, 255, 0.1);
    border-radius: 2px;
    overflow: hidden;
  }

  .progress-fill {
    height: 100%;
    background: var(--color-accent);
    transition: width 0.3s ease;
  }
</style>
