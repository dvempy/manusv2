---
export interface Props {
  src: string;
  alt: string;
  width: number;
  height: number;
  class?: string;
}

const { src, alt, width, height, class: className } = Astro.props;
---

<img
  src={src}
  alt={alt}
  width={width}
  height={height}
  loading="lazy"
  decoding="async"
  class={className}
/>

<style>
  img {
    max-width: 100%;
    height: auto;
  }
</style>
