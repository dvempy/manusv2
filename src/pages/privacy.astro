---
import Layout from '../layouts/Layout.astro';
import Footer from '../components/Footer.astro';
---

<Layout>
  <main>
    <div class="container">
      <div class="privacy-wrapper">
        <h1>Privacy Policy</h1>
        <p class="effective-date">Effective Date: May 16, 2025</p>

        <div class="privacy-content">
          <section class="introduction">
            <p>
              ApprovedOffers ("we," "us," "our," or the "Company") recognizes the importance of
              privacy, confidentiality, and security of your personal data and values the trust you
              place in us. This Privacy Policy is designed to maximize our ability to provide
              valuable services while maintaining appropriate protections for your information.
            </p>
          </section>

          <section>
            <h2>1. Information We Collect</h2>
            <h3>1.1 Personal Information</h3>
            <ul>
              <li>
                Identity Information: Name, email address, phone number, date of birth, gender,
                marital status, and parental details
              </li>
              <li>
                Financial Information: Income, loan amount, loan purpose, credit score, credit
                history, bank account details, payment information
              </li>
              <li>
                Government Identifiers: Social Security Number, Tax Identification Number, Driver's
                License Number, Passport Number (where permitted by law)
              </li>
              <li>
                Employment Information: Employer details, employment status, industry type, job
                title, work history, monthly income
              </li>
            </ul>
          </section>

          <!-- Additional sections omitted for brevity -->
        </div>
      </div>
    </div>
  </main>
  <Footer />
</Layout>

<style>
  .container {
    max-width: var(--container-width);
    margin: 0 auto;
    padding: 4rem var(--container-padding);
  }

  .privacy-wrapper {
    max-width: 800px;
    margin: 0 auto;
  }

  h1 {
    font-size: 3rem;
    font-weight: 700;
    margin-bottom: 1rem;
    text-align: center;
  }

  .effective-date {
    text-align: center;
    color: var(--color-muted);
    margin-bottom: 4rem;
  }

  .privacy-content {
    line-height: 1.6;
  }

  section {
    margin-bottom: 2rem;
  }

  h2 {
    font-size: 1.5rem;
    font-weight: 600;
    margin-bottom: 1rem;
  }

  h3 {
    font-size: 1.25rem;
    font-weight: 600;
    margin-bottom: 0.75rem;
  }

  p {
    margin-bottom: 1rem;
  }

  ul {
    list-style-type: disc;
    margin-left: 1.5rem;
    margin-bottom: 1rem;
  }

  @media (max-width: 768px) {
    .container {
      padding: 2rem var(--container-padding);
    }

    h1 {
      font-size: 2rem;
    }
  }
</style>
