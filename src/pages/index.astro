<script>
  import { initFloatingButton } from '../lib/floating-button';

  // Initialize floating button
  initFloatingButton({
    formSelector: '.loan-form',
    mainButtonSelector: '.button-full',
  });

  // Handle loan reason button clicks
  document.querySelectorAll('.loan-button').forEach((button) => {
    button.addEventListener('click', () => {
      // Remove selected state from all buttons
      document.querySelectorAll('.loan-button').forEach((btn) => {
        btn.classList.remove('selected');
        btn.setAttribute('aria-pressed', 'false');
      });

      // Add selected state to clicked button
      button.classList.add('selected');
      button.setAttribute('aria-pressed', 'true');

      // Update hidden input
      const loanReasonValue = button.dataset.value;
      document.getElementById('loan_reason').value = loanReasonValue;
      
      // Store in sessionStorage for persistence
      const state = JSON.parse(sessionStorage.getItem('form-state') || '{}');
      state.loan_reason = loanReasonValue;
      sessionStorage.setItem('form-state', JSON.stringify(state));
      
      // Reset dropdown
      document.getElementById('loan_reason_select').value = '';
    });

    // Add keyboard support
    button.addEventListener('keydown', (e) => {
      if (e.key === 'Enter' || e.key === ' ') {
        e.preventDefault();
        button.click();
      }
    });
  });

  // Handle dropdown changes
  document.getElementById('loan_reason_select').addEventListener('change', (e) => {
    const value = e.target.value;
    if (value) {
      // Remove selected state from all buttons
      document.querySelectorAll('.loan-button').forEach((btn) => {
        btn.classList.remove('selected');
        btn.setAttribute('aria-pressed', 'false');
      });

      // Update hidden input
      document.getElementById('loan_reason').value = value;
      
      // Store in sessionStorage for persistence
      const state = JSON.parse(sessionStorage.getItem('form-state') || '{}');
      state.loan_reason = value;
      sessionStorage.setItem('form-state', JSON.stringify(state));
    }
  });

  // Form validation
  document.querySelector('.loan-form').addEventListener('submit', (e) => {
    const loanReason = document.getElementById('loan_reason').value;
    if (!loanReason) {
      e.preventDefault();
      alert('Please select a loan reason');
      return;
    }
    
    // Store loan reason in sessionStorage before submission
    const state = JSON.parse(sessionStorage.getItem('form-state') || '{}');
    state.loan_reason = loanReason;
    sessionStorage.setItem('form-state', JSON.stringify(state));
  });
</script>

