---
import Layout from '../layouts/Layout.astro';
import Footer from '../components/Footer.astro';
---

<Layout>
  <main>
    <div class="container">
      <div class="contact-wrapper">
        <h1>Get in Touch</h1>
        <p class="subtitle">
          Have questions about our loan matching service? Our team is here to help you understand
          your options and guide you through the process of finding the right loan for your needs.
        </p>

        <div class="contact-grid">
          <div class="contact-card">
            <h2>Email Us</h2>
            <p class="email">support@approved-offers.com</p>
            <p class="note">
              We typically respond to all inquiries within 24 hours during business days.
            </p>
          </div>

          <div class="contact-card">
            <h2>Office Location</h2>
            <address>
              535 Mission St<br />
              14th floor<br />
              San Francisco, CA 94105
            </address>
          </div>

          <div class="contact-card">
            <h2>Business Hours</h2>
            <p>Monday - Friday: 9:00 AM - 6:00 PM PT</p>
            <p>Saturday - Sunday: Closed</p>
          </div>
        </div>
      </div>
    </div>
  </main>
  <Footer />
</Layout>

<style>
  .container {
    max-width: var(--container-width);
    margin: 0 auto;
    padding: 4rem var(--container-padding);
  }

  .contact-wrapper {
    max-width: 800px;
    margin: 0 auto;
  }

  h1 {
    font-size: 3rem;
    font-weight: 700;
    margin-bottom: 1rem;
    text-align: center;
  }

  .subtitle {
    color: var(--color-muted);
    text-align: center;
    font-size: 1.125rem;
    line-height: 1.6;
    margin-bottom: 4rem;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
  }

  .contact-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
  }

  .contact-card {
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid var(--color-border);
    border-radius: 1rem;
    padding: 2rem;
  }

  h2 {
    font-size: 1.25rem;
    font-weight: 600;
    margin-bottom: 1rem;
  }

  .email {
    color: var(--color-accent);
    font-weight: 500;
    margin-bottom: 0.5rem;
  }

  .note {
    color: var(--color-muted);
    font-size: 0.875rem;
    line-height: 1.5;
  }

  address {
    font-style: normal;
    line-height: 1.6;
  }

  @media (max-width: 768px) {
    .container {
      padding: 2rem var(--container-padding);
    }

    h1 {
      font-size: 2rem;
    }

    .subtitle {
      font-size: 1rem;
      margin-bottom: 2rem;
    }
  }
</style>
